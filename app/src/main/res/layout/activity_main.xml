<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btBuatFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat File"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btUbahFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah File"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btBacaFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baca File"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btHapusFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus File"
        tools:ignore="HardcodedText" />
    
    <TextView
        android:id="@+id/tvBaca"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:gravity="top|left"
        android:padding="5dp"
        android:textColorHint="#000"
        android:hint="Hasil Baca File"
        android:inputType="textMultiLine"
        android:layout_height="210dp"
        tools:ignore="HardcodedText,RtlHardcoded,TextViewEdits" />
</LinearLayout>